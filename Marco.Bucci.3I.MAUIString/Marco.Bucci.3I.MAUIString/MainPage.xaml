<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marco.Bucci._3I.MAUIString.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Editor
                x:Name="StringIn"
                Text="Input"
                FontSize="18"
                HorizontalOptions="Center" 
                HeightRequest="200"
                WidthRequest="500"
                />

            <Label
                Text="Output"
                x:Name="StringOut"
                FontSize="18"
                HorizontalOptions="Center"
                />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="StringBnt"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
